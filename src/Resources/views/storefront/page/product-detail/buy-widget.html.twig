{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_buy_inner %}
    {{ parent() }}
    {% if page.product.customFields['dataSheetURl'] %}
        <a href="{{ page.product.customFields['dataSheetURl'] }}" target="_blank">
        <span style="display:inline-block; margin-left:0px; margin-top: 0.5em;"
              class="badge badge-pill badge-secondary product-data-sheet"
              data-toggle="tooltip" data-html="true" title="{{ 'ecUtils.product.dataSheetTooltip'|trans|sw_sanitize }}"
        >
            {{ 'ecUtils.product.dataSheet'|trans|sw_sanitize }}
        </span>
        </a>
    {% else %}
        <span style="visibility:hidden; margin-left:0px; margin-top: 0.5em;"
              class="badge badge-pill badge-secondary product-data-sheet">
            ...
        </span>
    {% endif %}
{% endblock %}
